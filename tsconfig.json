{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["esnext"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./lib"
